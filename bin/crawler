var argv    = require('optimist').argv;
var prompt  = require('prompt');
var colors  = require('colors');
var config  = require('../src/config');
var Crawler = require('../src/crawler');
var winston = require('winston');
var redis   = require('redis');
var client  = redis.createClient(config.redis.port, config.redis.hostname);

winston.cli();
winston.remove(winston.transports.Console);
winston.add(
    winston.transports.Console,
    {
        level: config.logging.level,
        silent: config.logging.silent,
        colorize: true,
        timestamp: true
    }
);

if (typeof argv.url === 'undefined') {
	winston.error('Please use the --url "..." param to define the URL you want to crawl.');
	process.exit(1);
} else {
	winston.info('Start mapper.parse(' + argv.url + ')');

	client.send_command('FLUSHDB', []);

	var crawler = new Crawler();
	crawler.run(argv.url, 'GET');
}